@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CoffeeFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerLbs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LbsOnHand)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemId">Details</a> |
