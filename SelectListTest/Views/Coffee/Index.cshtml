@model IEnumerable<SelectListTest.Models.CoffeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.Variety)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TasteNotes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Country.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Variety.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.TasteNotes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
