@model SelectListTest.Models.CoffeeViewModel

@{
    ViewData["Title"] = "Delete";
}
<div class="panel narrow fg-gradient">

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="panel-inner">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.Country.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Variety)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.Variety.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item.TasteNotes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.TasteNotes)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Item.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index"><div class="btn">Back</div></a>
    </form>
</div>
</div>
